{% macro card (lo, path) %}

  {% if (lo.lotype == "course") and (lo.properties.disable) %}
    {% set url = "#" %}
  {% elif (lo.lotype == "course") and (lo.link) %}
    {% set url = lo.link %}
  {% elif (lo.absoluteLink) %}
    {% set url = lo.link + ' target="_blank"' %}
  {% elif (lo.lotype == "talk") %}
    {% set url = path+'/'+lo.folder+'/'+lo.link+ ' target="_blank"' %}
  {% else %}
    {% set url = path+'/'+lo.folder+'/'+lo.link %}
  {% endif %}

  <div class="uk-card uk-card-default uk-card-hover uk-card-small uk-text-center">
    <a href={{url}}>
      <div class="uk-card-header">
        <h5 class="uk-card-title"> {{ lo.title }}</h5>
      </div>
      <div class="uk-card-body">
        <img src="{{ path }}{{ lo.folder }}/{{ lo.img }}">
      </div>
    </a>
    <div class="uk-card-footer uk-flex-">
      <p> {{ lo.objectivesWithoutHeader }}</p>
    </div>
  </div>

{% endmacro %}S